<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="sse-server"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level topic=%X{topic:-na} [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Default log levels; can be overridden by Spring Boot properties -->
    <logger name="reactor" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="com.spectrayan.sse.server" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
